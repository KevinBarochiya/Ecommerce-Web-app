    </aside>

    <!-- Main Products Section -->
    <section class="flex-1 page-enter">
        <!-- Enhanced Sort Bar -->
        <div class="glass-effect rounded-xl p-4 mb-8 shadow-lg">
            <div class="flex flex-wrap justify-between items-center gap-4">
                <div class="flex items-center">
                    <i class="fas fa-sort mr-3 text-gray-600 text-lg"></i>
                    <span class="font-semibold text-gray-700">Sort by:</span>
                </div>
                
                <div class="flex flex-wrap gap-2">
                    <a href="/shop?sort=new<%= req.query.category ? '&category=' + req.query.category : '' %>" 
                    class="sort-button px-4 py-2 rounded-full text-sm font-medium relative z-10 transition-all
                           <%= (req.query.sort === 'new') ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                        <i class="fas fa-star mr-1"></i>New Arrivals
                    </a>

                    <a href="/shop?sort=price-desc<%= req.query.category ? '&category=' + req.query.category : '' %>" 
                    class="sort-button px-4 py-2 rounded-full text-sm font-medium relative z-10 transition-all
                           <%= (req.query.sort === 'price-desc') ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                        <i class="fas fa-arrow-up mr-1"></i>Price: High to Low
                    </a>

                    <a href="/shop?sort=price-asc<%= req.query.category ? '&category=' + req.query.category : '' %>" 
                    class="sort-button px-4 py-2 rounded-full text-sm font-medium relative z-10 transition-all
                           <%= (req.query.sort === 'price-asc') ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                        <i class="fas fa-arrow-down mr-1"></i>Price: Low to High
                    </a>

                    <a href="/shop?sort=discount<%= req.query.category ? '&category=' + req.query.category : '' %>" 
                    class="sort-button px-4 py-2 rounded-full text-sm font-medium relative z-10 transition-all
                           <%= (req.query.sort === 'discount') ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                        <i class="fas fa-percentage mr-1"></i>On Discount
                    </a>
                </div>
            </div>
        </div>

        <!-- Enhanced Product Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-6">
            <% products.forEach(function(product, index){ %>
            <div class="product-card bg-white rounded-xl overflow-hidden shadow-lg border product-item" 
                 style="animation-delay:s;">
                
                <!-- Product Image -->
                <div class="relative w-full h-64 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center overflow-hidden">
                    <% if(product.discount){ %>
                        <span class="discount-badge absolute top-3 left-3 bg-gradient-to-r from-red-500 to-red-600 text-white text-xs px-3 py-1 rounded-full font-bold shadow-lg z-10">
                            <i class="fas fa-fire mr-1"></i><%= product.discount %> Rs OFF
                        </span>
                    <% } %>
                    
                    <div class="absolute top-3 right-3 z-10">
                        <button class="bg-white/80 backdrop-blur-sm p-2 rounded-full hover:bg-white transition-all shadow-lg wishlist-btn">
                            <i class="far fa-heart text-gray-600 hover:text-red-500 transition-colors"></i>
                        </button>
                    </div>
                    
                    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                         loading="lazy" 
                         alt="<%= product.name %>" 
                         class="max-h-56 object-contain hover:scale-110 transition-transform duration-500">
                </div>

                <!-- Enhanced Product Info -->
                <div class="p-5">
                    <h3 class="font-semibold text-gray-800 mb-2 truncate"><%= product.name %></h3>
                    
                    <!-- Product Meta -->
                    <div class="flex items-center justify-between mb-2 text-xs text-gray-500">
                        <span class="flex items-center">
                            <i class="fas fa-tag mr-1"></i>Brand: <strong class="ml-1"><%= product.brand %></strong>
                        </span>
                        <span class="flex items-center">
                            <i class="fas fa-expand-arrows-alt mr-1"></i>Size: <strong class="ml-1"><%= product.size %></strong>
                        </span>
                    </div>
                    
                    <!-- Rating (placeholder) -->
                    <div class="flex items-center mb-3">
                        <div class="flex text-yellow-400 mr-2">
                            <i class="fas fa-star text-xs"></i>
                            <i class="fas fa-star text-xs"></i>
                            <i class="fas fa-star text-xs"></i>
                            <i class="fas fa-star text-xs"></i>
                            <i class="far fa-star text-xs"></i>
                        </div>
                        <span class="text-xs text-gray-600">(4.0)</span>
                    </div>
                    
                    <!-- Price -->
                    <div class="flex items-center mb-4">
                        <span class="text-xl font-bold text-indigo-600 price-pulse">₹<%= product.price %></span>
                        <% if(product.oldprice){ %>
                            <span class="line-through text-gray-400 text-sm ml-2">₹<%= product.oldprice %></span>
                            <span class="bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full ml-2 font-medium">
                                <%= Math.round(((product.oldprice - product.price) / product.oldprice) * 100) %>% OFF
                            </span>
                        <% } %>
                    </div>
                    
                    <!-- Add to Cart Button -->
                    <a href="/addtocart/<%=product._id%>" 
                       class="add-to-cart-btn block w-full text-center bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-medium hover:from-indigo-700 hover:to-purple-700">
                        <i class="fas fa-shopping-cart mr-2"></i>Add to Cart
                    </a>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Enhanced Pagination -->
        <div class="flex justify-center items-center mt-12">
            <nav class="glass-effect rounded-full px-4 py-2 shadow-lg">
                <div class="flex items-center space-x-2">
                    <% if(currentPage > 1){ %>
                        <a href="/shop?page=<%= currentPage - 1 %><%= req.query.category ? '&category=' + req.query.category : '' %>" 
                           class="pagination-btn p-2 rounded-full hover:bg-indigo-100 transition-all">
                            <i class="fas fa-chevron-left text-gray-600"></i>
                        </a>
                    <% } %>

                    <% for(let i = 1; i <= totalPages; i++){ %>
                        <a href="/shop?page=<%= i %><%= req.query.category ? '&category=' + req.query.category : '' %>" 
                           class="pagination-btn px-4 py-2 rounded-full font-medium transition-all
                                  <%= (i === currentPage) ? 'bg-indigo-600 text-white' : 'hover:bg-gray-100' %>">
                            <%= i %>
                        </a>
                    <% } %>

                    <% if(currentPage < totalPages){ %>
                        <a href="/shop?page=<%= currentPage + 1 %><%= req.query.category ? '&category=' + req.query.category : '' %>" 
                           class="pagination-btn p-2 rounded-full hover:bg-indigo-100 transition-all">
                            <i class="fas fa-chevron-right text-gray-600"></i>
                        </a>
                    <% } %>
                </div>
            </nav>
        </div>
    </section>
</div>

<script>
    // Enhanced animations on scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);

    // Observe product cards for scroll animation
    document.querySelectorAll('.product-item').forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
        observer.observe(card);
    });

    // Enhanced add to cart animation
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            // Create ripple effect
            const ripple = document.createElement('span');
            const rect = this.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            ripple.style.width = ripple.style.height = size + 'px';
            ripple.style.left = (e.clientX - rect.left - size / 2) + 'px';
            ripple.style.top = (e.clientY - rect.top - size / 2) + 'px';
            ripple.classList.add('ripple');
            this.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        });
    });

    // Wishlist button functionality
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const icon = this.querySelector('i');
            if (icon.classList.contains('far')) {
                icon.classList.remove('far');
                icon.classList.add('fas', 'text-red-500');
            } else {
                icon.classList.remove('fas', 'text-red-500');
                icon.classList.add('far');
            }
        });
    });
</script>

<style>
.ripple {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.6);
    transform: scale(0);
    animation: ripple-effect 0.6s linear;
    pointer-events: none;
}

@keyframes ripple-effect {
    to {
        transform: scale(4);
        opacity: 0;
    }
}
</style>

