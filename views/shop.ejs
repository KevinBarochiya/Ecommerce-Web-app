<%- include('./partials/header') %>

<!-- Flash Message -->
<% if(success.length>0){ %>
<div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-green-600 shadow-lg z-50" id="AB">
    <span class="text-white font-medium tracking-wide">
        <%= success %>
    </span>
</div>
<% } %>    

<script>
document.addEventListener("DOMContentLoaded", function () {
    const flashMessage = document.getElementById("AB");
    if (flashMessage) {
        setTimeout(() => {
            flashMessage.style.transition = "opacity 0.5s ease";
            flashMessage.style.opacity = "0";
            setTimeout(() => flashMessage.remove(), 500);
        }, 1500);
    }
});
</script>

<!-- Category Pills -->
<div class="flex justify-center flex-wrap gap-3 py-4 border-b bg-white">
    <button class="px-5 py-2 border rounded hover:bg-gray-100">Oversized T-Shirts</button>
    <button class="px-5 py-2 border rounded hover:bg-gray-100">Full Sleeve T-Shirts</button>
    <button class="px-5 py-2 border rounded hover:bg-gray-100">Brand Printed T-Shirts</button>
    <button class="px-5 py-2 border rounded hover:bg-gray-100">Black T-Shirts</button>
    <button class="px-5 py-2 border rounded hover:bg-gray-100">Sports T-Shirts</button>
</div>

<!-- Main Shop Section -->
<div class="flex px-8 py-10 bg-gray-50 gap-8">

    <!-- Sidebar -->
    <aside class="w-1/5 bg-white rounded-md shadow-sm p-4 border">
        <h2 class="text-lg font-semibold mb-4">Filters</h2>

        <!-- Category -->
        <details open class="mb-4">
            <summary class="cursor-pointer font-medium">Category</summary>
            <div class="mt-2 space-y-1">
                <label class="flex items-center space-x-2">
                    <input type="checkbox"> <span>Polo Shirts</span>
                </label>
                <label class="flex items-center space-x-2">
                    <input type="checkbox"> <span>T-Shirts</span>
                </label>
            </div>
        </details>

        <!-- Gender -->
        <details class="mb-4">
            <summary class="cursor-pointer font-medium">Gender</summary>
            <div class="mt-2 space-y-1">
                <label><input type="checkbox"> Men</label><br>
                <label><input type="checkbox"> Women</label>
            </div>
        </details>

        <!-- Price -->
        <details>
            <summary class="cursor-pointer font-medium">Price</summary>
            <div class="mt-2">
                <input type="range" min="0" max="5000" class="w-full">
            </div>
        </details>
    </aside>

    <!-- Main Products Section -->
    <section class="flex-1">
        <!-- Sort Bar -->
        <div class="flex justify-between items-center mb-6">
            <div class="flex gap-2">
                <a href="/shop?sort=new" 
                class="px-4 py-1 border rounded <%= (req.query.sort === 'new') ? 'bg-yellow-100' : 'hover:bg-gray-100' %>">
                New Arrivals
                </a>

                <a href="/shop?sort=price-desc" 
                class="px-4 py-1 border rounded <%= (req.query.sort === 'price-desc') ? 'bg-yellow-100' : 'hover:bg-gray-100' %>">
                Price: High to Low
                </a>

                <a href="/shop?sort=price-asc" 
                class="px-4 py-1 border rounded <%= (req.query.sort === 'price-asc') ? 'bg-yellow-100' : 'hover:bg-gray-100' %>">
                Price: Low to High
                </a>

                <a href="/shop?sort=discount" 
                class="px-4 py-1 border rounded <%= (req.query.sort === 'discount') ? 'bg-yellow-100' : 'hover:bg-gray-100' %>">
                On Discount
                </a>
            </div>
            <div class="flex items-center gap-3 text-gray-500">
                <i class="ri-grid-fill"></i>
                <i class="ri-list-unordered"></i>
            </div>
            </div>

        <!-- Product Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% products.forEach(function(product){ %>
            <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition overflow-hidden border">
                <!-- Product Image -->
                <div class="relative w-full h-64 bg-gray-100 flex items-center justify-center">
                    <% if(product.discount){ %>
                        <span class="absolute top-2 left-2 bg-red-600 text-white text-xs px-2 py-1 rounded">
                            <%= product.discount %> Rs OFF
                        </span>
                    <% } %>
                    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>" class="max-h-56 object-contain">
                </div>

                <!-- Product Info -->
                <div class="p-4">
                    <h3 class="text-sm font-medium text-gray-800 truncate"><%= product.name %></h3>
                    <div class="mt-1 flex items-center gap-2">
                        <span class="text-red-600 font-semibold">₹<%= product.price %></span>
                        <% if(product.oldprice){ %>
                            <span class="line-through text-gray-400 text-sm">₹<%= product.oldprice %></span>
                        <% } %>
                    </div>
                    <a href="/addtocart/<%=product._id%>" class="mt-3 block w-full text-center bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700">
                        Add to Cart
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </section>
</div>

<%- include('./partials/footer') %>
